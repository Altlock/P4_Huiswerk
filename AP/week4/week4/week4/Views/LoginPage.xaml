<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="week4.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Margin="32" VerticalOptions="Center">
            <Label Text="Username"/>
            <Entry x:Name="Username"/>
            <Label Text="Password"/>
            <Entry x:Name="Password"/>
            <Button x:Name="LoginButton" Text="Login" Clicked="Login_Clicked" HorizontalOptions="Center"/>
            <Label x:Name="WrongCredmsg" HorizontalOptions="Center" TextColor="Red" FontAttributes="Italic" FontSize="Small"/>
            <Label x:Name="KlikLabel" Text="Als je nog geen account hebt maak hem dan aan" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>