<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week 4.Views.View1">
  <ContentView.Content>
      <StackLayout VerticalOptions="Center" Margin="32">
          <Label Text="Username" />
          <Entry x:Name="Username"></Entry>
          <Label Text="Password" />
          <Entry x:Name="Password"></Entry>
          <Button x:Name="LoginButton" HorizontalOptions="Center" Clicked="LoginClicked"></Button>
          <Label Text="If you don't have an account yet, register here" HorizontalOptions="Center" FontSize="Small"></Label>
      </StackLayout>
  </ContentView.Content>
</ContentView>